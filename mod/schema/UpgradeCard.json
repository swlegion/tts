{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://schema.swlegion.dev/UpgradeCard.json",

  "title": "Upgrade Card",
  "description": "Definition of an upgrade card.",

  "additionalProperties": false,

  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },

    "image": {
      "$ref": "./Image.json"
    },

    "mini": {
      "oneOf": [
        {
          "description": "A single placeholder mini.",
          "enum": [1]
        },
        {
          "$ref": "./Mini.json"
        }
      ]
    },

    "leader": {
      "description": "Whether this upgrade becomes the unit leader.",
      "enum": [true]
    },

    "flip": {
      "type": "object",

      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },

        "image": {
          "$ref": "./Image.json"
        }
      },

      "required": ["name", "image"]
    }
  },

  "required": ["name", "image"]
}
