{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://schema.swlegion.dev/UnitCard.json",

  "title": "Unit Card",
  "description": "Definition of a unit card.",

  "definitions": {
    "Bases": {
      "enum": ["small", "medium", "large", "huge", "laat", "epic", "long"]
    }
  },

  "additionalProperties": false,

  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },

    "title": {
      "type": "string",
      "minLength": 1
    },

    "image": {
      "$ref": "./Image.json"
    },

    "size": {
      "description": "Size of the base.",
      "$ref": "#/definitions/Bases"
    },

    "minis": {
      "type": "array",
      "items": {
        "$ref": "./Mini.json"
      }
    }
  },

  "required": ["name", "image", "size"]
}
