{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://schema.swlegion.dev/UnitCard.json",

  "title": "Unit Card",
  "description": "Definition of a unit card.",

  "additionalProperties": false,

  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },

    "title": {
      "type": "string",
      "minLength": 1
    },

    "image": {
      "$ref": "./Image.json"
    }
  },

  "required": ["name", "image"]
}
