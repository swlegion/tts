{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://schema.swlegion.dev/deps/UnitCard.json",

  "title": "Unit Card",
  "description": "Definition of a unit card.",

  "definitions": {
    "Bases": {
      "enum": ["small", "medium", "large", "huge", "laat", "epic", "long"]
    }
  },

  "additionalProperties": false,

  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },

    "title": {
      "type": "string",
      "minLength": 1
    },

    "displayName": {
      "description": "Optional. If provided, is used instead of name or title for list building purposes.",
      "type": "string",
      "minLength": 1
    },

    "image": {
      "$ref": "./Image.json"
    },

    "size": {
      "description": "Size of the base.",
      "$ref": "#/definitions/Bases"
    },

    "type": {
      "$ref": "./UnitTypes.json"
    },

    "heavyWeaponTeam": {
      "description": "Reqyure a \"Heavy Weapon\" upgrade attached to this unit and make it the unit leader.",
      "enum": [true]
    },

    "minis": {
      "oneOf": [
        {
          "description": "Number of placeholder minis to spawn",
          "type": "number",
          "minimum": 1
        },
        {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "./Mini.json"
          }
        }
      ]
    },

    "points": {
      "type": "number",
      "minimum": 0
    },

    "speed": {
      "type": "number",
      "minimum": 0
    },

    "upgrades": {
      "additionalProperties": {
        "type": "number",
        "minimum": 1
      },

      "propertyNames": {
        "$ref": "./Upgrades.json"
      },

      "type": "object"
    },

    "commands": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "./CommandCard.json"
      }
    },

    "required": {
      "type": "array",
      "description": "Required upgrades or flaw cards, by name.",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    }
  },

  "type": "object",
  "required": ["name", "image", "size", "type", "points", "speed", "upgrades"]
}
