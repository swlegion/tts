{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://schema.swlegion.dev/deps/BattleCardSet.json",

  "title": "A collection of Battle Cards.",
  "description": "A set of battle cards, by type and scenario.",

  "type": "object",
  "additionalProperties": {
    "type": "object",
    "additionalProperties": false,

    "properties": {
      "objective": {
        "type": "array",
        "minItems": 1,
        "items": {
          "$ref": "./BattleCard.json"
        }
      },
      "deployment": {
        "type": "array",
        "minItems": 1,
        "items": {
          "$ref": "./DeploymentCard.json"
        }
      },
      "condition": {
        "type": "array",
        "minItems": 1,
        "items": {
          "$ref": "./BattleCard.json"
        }
      }
    }
  },

  "propertyNames": {
    "enum": ["skirmish", "standard", "scenario", "community"]
  }
}
