{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://schema.swlegion.dev/deps/GenericObject.json",

  "title": "Generic object resource",
  "description": "Possible object subtypes.",

  "definitions": {
    "Card": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },

        "image": {
          "$ref": "./Image.json"
        },

        "back": {
          "$ref": "./Image.json"
        }
      },
      "required": ["name", "image"]
    },

    "Deck": {
      "type": "object",
      "additionalProperties": false,

      "properties": {
        "back": {
          "$ref": "./Image.json"
        },

        "cards": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "name": {
              "type": "string",
              "minLength": 1
            },

            "image": {
              "$ref": "./Image.json"
            },
            "required": ["name", "image"]
          }
        }
      }
    },

    "Mini": {
      "type": "object",
      "additionalProperties": false,

      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },

        "mini": {
          "$ref": "./Mini.json"
        }
      },

      "required": ["name", "model"]
    },

    "Token": {
      "type": "object",
      "additionalProperties": false,

      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },

        "model": {
          "$ref": "./Mini.json"
        }
      },

      "required": ["name", "model"]
    }
  },

  "oneOf": [
    { "$ref": "#/definitions/Card" },
    { "$ref": "#/definitions/Deck" },
    { "$ref": "#/definitions/Mini" },
    { "$ref": "#/definitions/Token" }
  ]
}
