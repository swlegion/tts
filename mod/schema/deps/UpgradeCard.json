{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://schema.swlegion.dev/deps/UpgradeCard.json",

  "title": "Upgrade Card",
  "description": "Definition of an upgrade card.",

  "definitions": {
    "Restriction": {
      "description": "List-building requirements enforced by the in-mod list builder.",
      "type": "object",

      "properties": {
        "alignment": {
          "type": "array",
          "minItems": 1,
          "items": {
            "enum": ["Dark", "Light"]
          }
        },

        "rank": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "./Ranks.json"
          }
        },

        "slot": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "./Upgrades.json"
          }
        },

        "unit": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },

        "faction": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "./Factions.json"
          }
        },

        "type": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$comment": "TODO: Add unit types.",
            "type": "string",
            "minLength": 1
          }
        }
      },

      "minProperties": 1
    }
  },

  "additionalProperties": false,

  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },

    "displayName": {
      "description": "Optional. If provided, is used instead of name or title for list building purposes.",
      "type": "string",
      "minLength": 1
    },

    "image": {
      "$ref": "./Image.json"
    },

    "mini": {
      "oneOf": [
        {
          "description": "A single placeholder mini.",
          "enum": [1]
        },
        {
          "$ref": "./Mini.json"
        }
      ]
    },

    "leader": {
      "description": "Whether this upgrade becomes the unit leader.",
      "enum": [true]
    },

    "flip": {
      "type": "object",

      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },

        "image": {
          "$ref": "./Image.json"
        }
      },

      "required": ["name", "image"]
    },

    "points": {
      "type": "number",
      "minimum": 0
    },

    "restrictions": {
      "type": "object",
      "minProperties": 1,

      "properties": {
        "include": {
          "$ref": "#/definitions/Restriction"
        },

        "exclude": {
          "$ref": "#/definitions/Restriction"
        },

        "override": {
          "$ref": "#/definitions/Restriction"
        }
      }
    },

    "additionalObjects": {
      "$ref": "./AdditionalObjects.json"
    }
  },

  "type": "object",
  "required": ["name", "image", "points"]
}
