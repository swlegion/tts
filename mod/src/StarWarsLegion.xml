<!-- #include !/ui/Menu -->
<!-- The floating menu spawned in the bottom right corner-->

<!-- Height should be NUM_BUTTONS * 58-->
<VerticalLayout
  height="232"
  id="legionFloatingMenu"
  offsetXY="-6 60"
  rectAlignment="LowerRight"
  spacing="6"
  width="52"
>
  <Button fontSize="10" onClick="toggleWelcomeDialog">Welcome</Button>
  <Button fontSize="10" interactable="false">-</Button>
  <Button fontSize="10" interactable="false">-</Button>
  <Button fontSize="10" interactable="false">-</Button>
</VerticalLayout>

<!-- #include !/ui/Welcome -->
<!-- Welcome/Help/Changelog Dialog -->

<Panel 
  active="true"
  allowDragging="true"
  color="#40404080"
  height="300"
  id="welcomeDialog"
  outline="#202020"
  rectAlignment="CenterCenter"
  returnToOriginalPositionWhenReleased="false"
  width="500"
>
  <Panel 
    color="#202020"
    height="30"
    padding="5"
    rectAlignment="UpperCenter"
    width="500"
  >
    <Text color="#ffffff">Star Wars Legion for TTS</Text>
  </Panel>
  <Panel
    height="30"
    width="30"
    rectAlignment="UpperRight"
    padding="2"
  >
    <Button onClick="toggleWelcomeDialog">X</Button>
  </Panel>
  <Panel
    height="240"
    padding="5"
    width="500"
  >
    <VerticalLayout>
      <Text alignment="UpperLeft" color="#ffffff" fontSize="12">
        Welcome to Star Wars: Legion for TTS, <b>v5.0.0-beta</b>.

        This is a <b>beta release</b>, and is <textcolor color="#f03333"><b>not suitable for tournament play</b></textcolor>.
        
        To access the stable version of the mod visit <i>https://go.swlegion.dev/mod</i>.

        <b>CHANGELOG</b>

        - Added a new welcome dialog and UI alternative to the janky notecards.
      </Text>
    </VerticalLayout>
  </Panel>
  <Panel 
    color="#202020"
    height="30"
    offsetXY="0 -270"
    padding="5"
    rectAlignment="UpperCenter"
    width="500"
  >
    <HorizontalLayout height="30">
      <Button>
        <Text fontSize="10" fontStyle="bold">What's New</Text>
      </Button>
      <Button interactable="false">
        <Text fontSize="10">-</Text>
      </Button>
      <Button interactable="false">
        <Text fontSize="10">-</Text>
      </Button>
      <Button interactable="false">
        <Text fontSize="10">-</Text>
      </Button>
    </HorizontalLayout>
  </Panel>
</Panel>

<!-- #include !/ui/Welcome -->

