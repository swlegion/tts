<!-- Welcome/Help/Changelog Dialog -->

<Panel 
  active="true"
  allowDragging="true"
  color="#40404080"
  height="300"
  id="welcomeDialog"
  outline="#202020"
  rectAlignment="CenterCenter"
  returnToOriginalPositionWhenReleased="false"
  width="500"
>
  <Panel 
    color="#202020"
    height="30"
    padding="5"
    rectAlignment="UpperCenter"
    width="500"
  >
    <Text color="#ffffff">Title</Text>
  </Panel>
  <Panel
    height="240"
    padding="5"
    width="500"
  >
    <Text color="#ffffff">Content</Text>
  </Panel>
  <Panel 
    color="#202020"
    height="30"
    offsetXY="0 -270"
    padding="5"
    rectAlignment="UpperCenter"
    width="500"
  >
    <HorizontalLayout height="30">
      <Button>
        <Text fontSize="10">Updates</Text>
      </Button>
      <Button>
        <Text fontSize="10">Updates</Text>
      </Button>
      <Button>
        <Text fontSize="10">Updates</Text>
      </Button>
      <Button>
        <Text fontSize="10">Support</Text>
      </Button>
    </HorizontalLayout>
  </Panel>
</Panel>
