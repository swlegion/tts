function Deck:_spawnCard(front, back)
  local custom = spawnObject({
    type     = "CardCustom",
    position = {54.62, 0.94, -35.45},
    scale    = {0.83, 1, 0.83},
  })
  custom.setCustomObject({
    face     = front,
    back     = back,
  })
  return custom
end
