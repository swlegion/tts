{
  "$schema": "http://json-schema.org/draft-07/schema",

  "definitions": {
    "Factions": {
      "enum": ["Rebel", "Empire", "Republic", "Separatist"]
    },

    "Ranks": {
      "enum": [
        "Commander",
        "Operative",
        "Corps",
        "Special Forces",
        "Support",
        "Heavy"
      ]
    },

    "Image": {
      "anyOf": [
        {
          "enum": [""]
        },
        {
          "$ref": "#/definitions/ImageUrl"
        },
        {
          "description": "A slice of a larger image/spritesheet",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "url": {
              "$ref": "#/definitions/ImageUrl"
            },

            "x": {
              "type": "number",
              "minimum": 0,
              "format": "integer"
            },

            "y": {
              "type": "number",
              "minimum": 0,
              "format": "integer"
            }
          }
        }
      ]
    },

    "ImageUrl": {
      "type": "string",
      "format": "uri",
      "minLength": 1
    },

    "UnitCards": {
      "additionalProperties": {
        "additionalProperties": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/UnitCard"
          }
        },

        "propertyNames": {
          "$ref": "#/definitions/Ranks"
        }
      },

      "propertyNames": {
        "$ref": "#/definitions/Factions"
      }
    },

    "UnitCard": {
      "additionalProperties": false,

      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },

        "title": {
          "type": "string",
          "minLength": 1
        },

        "image": {
          "$ref": "#/definitions/Image"
        }
      },

      "required": ["name", "image"]
    }
  },

  "additionalProperties": false,

  "properties": {
    "units": {
      "$ref": "#/definitions/UnitCards"
    }
  },

  "required": ["units"]
}
