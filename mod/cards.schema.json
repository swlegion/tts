{
  "$schema": "http://json-schema.org/draft-07/schema",

  "definitions": {
    "Factions": {
      "enum": ["Rebel", "Empire", "Republic", "Separatist"]
    },

    "Ranks": {
      "enum": [
        "Commander",
        "Operative",
        "Corps",
        "Special Forces",
        "Support",
        "Heavy"
      ]
    },

    "UnitCards": {
      "additionalProperties": {
        "additionalProperties": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/UnitCard"
          }
        },

        "propertyNames": {
          "$ref": "#/definitions/Ranks"
        }
      },

      "propertyNames": {
        "$ref": "#/definitions/Factions"
      }
    },

    "UnitCard": {
      "additionalProperties": false,

      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },

        "title": {
          "type": "string",
          "minLength": 1
        },

        "image": {
          "anyOf": [
            {
              "enum": [""]
            },
            {
              "type": "string",
              "format": "uri",
              "minLength": 1
            }
          ]
        }
      },

      "required": ["name", "image"]
    }
  },

  "additionalProperties": false,

  "properties": {
    "units": {
      "$ref": "#/definitions/UnitCards"
    }
  },

  "required": ["units"]
}
